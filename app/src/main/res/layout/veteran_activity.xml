<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/veteranView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VeteranActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/veteranLoginDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Welcome Veteran!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/veteranApplications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="View Applications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veteranCreateJob" />

    <Button
        android:id="@+id/veteranMakeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:text="Make a review"
        app:layout_constraintStart_toStartOf="@+id/veteranSearchButton"
        app:layout_constraintTop_toBottomOf="@+id/veteranPayButton" />

    <Button
        android:id="@+id/veteranSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Search for Jobs"
        app:layout_constraintStart_toStartOf="@+id/veteranApplications"
        app:layout_constraintTop_toBottomOf="@+id/veteranApplications" />

    <Button
        android:id="@+id/veteranCheckMapLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:text="check place"
        app:layout_constraintStart_toStartOf="@+id/veteranApplications"
        app:layout_constraintTop_toBottomOf="@+id/veteranHistory" />

    <Button
        android:id="@+id/veteranYourJobsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="YOUR JOBS"
        app:layout_constraintStart_toStartOf="@+id/veteranLogoutButton"
        app:layout_constraintTop_toBottomOf="@+id/veteranMakeReview" />

    <Button
        android:id="@+id/veteranHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="152dp"
        android:text="History"
        app:layout_constraintStart_toStartOf="@+id/veteranCheckMapLocation"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/veteranCreateJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="Create Job"
        app:layout_constraintStart_toStartOf="@+id/veteranCheckMapLocation"
        app:layout_constraintTop_toBottomOf="@+id/veteranCheckMapLocation" />

    <Button
        android:id="@+id/veteranLogoutButton"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veteranYourJobsButton" />

    <Button
        android:id="@+id/veteranPayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        android:text="PAY EMPLOYEE - old functionality-"
        app:layout_constraintEnd_toEndOf="@+id/veteranMakeReview"
        app:layout_constraintTop_toBottomOf="@+id/veteranSearchButton" />

</androidx.constraintlayout.widget.ConstraintLayout>